        <activity
            android:name="com.capstone.ar_tourguide.ui.maps.MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />
        <activity
            android:name="com.capstone.ar_tourguide.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.capstone.ar_tourguide.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.capstone.ar_tourguide.ui.camera.CameraAR"
            android:exported="false" />
        <activity
            android:name="com.capstone.ar_tourguide.ui.camera.CameraFragment"
            android:exported="false" />
        <activity
            android:name="com.capstone.ar_tourguide.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.capstone.ar_tourguide.onboarding.OnBoardingActivity2"
            android:exported="false" />
        <activity
            android:name="com.capstone.ar_tourguide.onboarding.OnBoardingActivity1"
            android:exported="false" />
        <activity
            android:name="com.capstone.ar_tourguide.MainActivity"
            android:exported="false" />
